            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyName\": \"OrgName1\",\n  \"domain\": \"org1.com\",\n  \"email\": \"contact@org1.com\",\n  \"phoneNumber\": \"123-456-7890\",\n  \"numberOfEmpRange\": \"1-10\"\n}",
