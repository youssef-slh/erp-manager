<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="youssef.saleh">
        <createTable tableName="MODULE">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="icon" type="nvarchar(5000)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BIT" defaultValueNumeric="1">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="Double"/>
            <column name="currency" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="001-create-organization-table" author="youssef.saleh">
        <createTable tableName="ORGANIZATION">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="company_name" type="VARCHAR(255)"/>
            <column name="domain" type="VARCHAR(255)"/>
            <column name="icon" type="VARCHAR(5000)"/>
            <column name="description" type="TEXT"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="number_of_emp_range" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>


    <changeSet id="002-create-user-model-table" author="youssef.saleh">
        <createTable tableName="TR_USER_MODULE">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(255)"/>
            <column name="module_id" type="INT"/>
            <column name="role" type="VARCHAR(255)"/>
            <column name="active" type="BIT" defaultValueNumeric="1">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-new-column-module" author="youssef.saleh">
        <addColumn tableName="MODULE">
            <column name="tag" type="VARCHAR(255)">
            </column>
            <column name="version" type="VARCHAR(5)">
            </column>
            <column name="categories" type="VARCHAR(500)">
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>